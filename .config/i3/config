# bindsym $mod+r mode "default"

# Gaping
gaps inner 10
gaps outer 10
gaps horizontal 10
gaps vertical 10
gaps top 0
gaps right 0
gaps bottom 0
gaps left 0

# window borders
# new_window 1pixel

bindsym $mod+r mode "resize"

#darkred
set $bg-color 	         #410B0C
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935
set $darkred             #00ff00

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          $bg-color
client.unfocused        $inactive-bg-color  $inactive-bg-color $inactive-text-color $bg-color
client.focused_inactive $inactive-bg-color  $inactive-bg-color $inactive-text-color $bg-color
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $bg-color

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
		colors {
			background $bg-color
			statusline #eeeeee
			separator #eeeeee
			#background #666666
			#statusline #ffffff
			#separator #ffffff
			focused_workspace  #ffffff #ffffff #333333
			#focused_workspace  #ffffff #ffffff #$bgcolor
			inactive_workspace #cecece #cecece #$txtcolor
		}
	output DP-4
	font pango:DejaVu Sans Mono 12
	position top
	tray_output none  
	status_command bumblebee-status/bumblebee-status  -m cpu date time weather pasink pasource indicator -p weather.location="Marburg" root.path=/ time.format="%H:%M:%S" date.format="%a, %b %d %Y" -t gruvbox-powerline
}
bar {
		colors {
			background #333333
			statusline #eeeeee
			separator #eeeeee
			#background #666666
			#statusline #ffffff
			#separator #ffffff
			focused_workspace  #ffffff #ffffff #333333
			#focused_workspace  #ffffff #ffffff #$bgcolor
			inactive_workspace #cecece #cecece #$txtcolor
		}
	output DP-0
	font pango:DejaVu Sans Mono 15
	position bottom
	tray_output none  
	status_command bumblebee-status/bumblebee-status -m shortcut -p shortcut.cmds="xfce4-screenshooter;ps" shortcut.labels="A;B" -t gruvbox-powerline
}

# LAPTOP DISPLAY
bar {
		colors {
			background $bg-color
			statusline #eeeeee
			separator #eeeeee
			#background #666666
			#statusline #ffffff
			#separator #ffffff
			focused_workspace  #ffffff #ffffff #333333
			#focused_workspace  #ffffff #ffffff #$bgcolor
			inactive_workspace #cecece #cecece #$txtcolor
		}
	output eDP1
	font pango:DejaVu Sans Mono 12
	position top
	tray_output none  
	status_command bumblebee-status/bumblebee-status  -m cpu date time weather pasink pasource indicator battery -p weather.location="Marburg" root.path=/ time.format="%H:%M:%S" date.format="%a, %b %d %Y" date.left-click="orage" -t gruvbox-powerline
}
bindsym $mod+Shift+x exec i3lock

